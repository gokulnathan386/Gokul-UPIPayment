<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/layout_transicatioblist"
        android:orientation="horizontal"
        android:backgroundTint="#F7F9FC"
        android:background="@drawable/background_edittext"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/circle"
            android:layout_gravity="center"
            android:layout_height="50dp">


            <ImageView
                android:id="@+id/payment_category_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_tap_pay" />




        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phoneno"
                android:text="7965465465"
                android:textSize="18dp"
                android:textColor="#1F4073"
                android:textStyle="bold"
                android:fontFamily="@font/metropolis_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/upiIdTxt"
                android:text="7965465465"
                android:textSize="18dp"
                android:textColor="#1F4073"
                android:textStyle="bold"
                android:fontFamily="@font/metropolis_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/dataTimeTxt"
                android:text=""
                android:textSize="12dp"
                android:textColor="#717171"
                android:textStyle="normal"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/amount"
                android:text="13:40"
                android:textSize="15dp"
                android:textColor="#717171"
                android:textStyle="normal"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content">
            </Space>


            <RelativeLayout
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_height="20dp">


                <ImageView
                    android:id="@+id/payment_status"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/wrong_icon" />
                <!-- tik_icon-->

            </RelativeLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content">
            </Space>



        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>